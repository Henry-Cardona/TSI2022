<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1">

<resources>
    <jdbc-resource jndi-name = "my_persistence_unit" pool-name="postgres">
        <description/>
    </jdbc-resource>
    <!--jdbc-resource jndi-name = "my_persistence_unit" pool-name="RESOURCE_LOCAL">
        <description/>
    </jdbc-resource-->
    <jdbc-connection-pool
        datasource-classname = "org.h2.jdbcx.JdbcDataSource"
        name = "postgres"
        res-type = "javax.sql.DataSource">
        <property name = "user" value = "sa"/>
        <property name = "password" value = ""/>
        <property
            name = "url"
            value = "jdbc:h2:mem:h2;TRACE_LEVEL_FILE=3;TRACE_LEVEL_SYSTEM_OUT=3;DB_CLOSE_DELAY=-1"/>
    </jdbc-connection-pool>
</resources>
